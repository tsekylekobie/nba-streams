{
	"name": "NBA Streams",
    "manifest_version": 2,
	"description": "Find NBA streams quickly. Streamers can be found on r/nbastreams.",
	"version": "1.0.5",
	"permissions": [
    	"activeTab",
        "http://stats.nba.com"
    ],
    "browser_action": {
      "default_popup": "index.html",
      "default_icon": "basketball.png"
    },
    "background": {
    	"scripts": ["js/reddit.min.js", "js/jquery-3.3.1.min.js", "js/main.js", "js/boxscore.js", "js/games.js", "js/table.js"],
    	"persistent": false
    }
}